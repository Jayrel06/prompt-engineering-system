    {
      "parameters": {
        "jsCode": "// Handle execution errors\nconst error = $input.first().json;\n\nreturn {\n  success: false,\n  error: \"Failed to execute context loader\",\n  details: error.stderr || error.error || \"Unknown error\",\n  timestamp: new Date().toISOString()\n};"
      },
      "id": "handle-execution-error",
