        "command": "python",
        "arguments": "={{ $json.body.mode }} {{ $json.body.task }} {{ $json.body.framework || '' }} {{ $json.body.project || '' }}",
        "options": {
          "cwd": "C:/Users/JRiel/prompt-engineering-system/scripts"
        }
      },
      "id": "execute-context-loader",
      "name": "Execute Context Loader",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [
        680,
        180
      ]
    },
    {
      "parameters": {
        "jsCode": "// Parse the Python script output\nconst output = $input.first().json.stdout;\n\ntry {\n  // Try to parse as JSON first\n  const parsedOutput = JSON.parse(output);\n  \n  return {\n    success: true,\n    prompt: parsedOutput.prompt || parsedOutput,\n    metadata: {\n      task: $('Webhook Trigger').first().json.body.task,\n      mode: $('Webhook Trigger').first().json.body.mode,\n      framework: $('Webhook Trigger').first().json.body.framework || null,\n      project: $('Webhook Trigger').first().json.body.project || null,\n      timestamp: new Date().toISOString(),\n      token_estimate: parsedOutput.token_estimate || null\n    }\n  };\n} catch (e) {\n  // If not JSON, treat as plain text prompt\n  return {\n    success: true,\n    prompt: output.trim(),\n    metadata: {\n      task: $('Webhook Trigger').first().json.body.task,\n      mode: $('Webhook Trigger').first().json.body.mode,\n      framework: $('Webhook Trigger').first().json.body.framework || null,\n      project: $('Webhook Trigger').first().json.body.project || null,\n      timestamp: new Date().toISOString()\n    }\n  };\n}"
      },
      "id": "format-response",
      "name": "Format Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        900,
        180
      ]
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ $json }}",
